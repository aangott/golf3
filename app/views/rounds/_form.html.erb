<%= form_for @round_form, url: @form_url do |f| %>
  <div class='form-group'>
    <%= f.label :date %><br />
    <%= 
      f.date_select :date, 
      {:order => [:month, :day, :year]}, 
      { class: 'form-control' } 
    %>
  </div>
  <div class='form-group'>
    <%= f.label :course %><br />
    <%= 
      f.select :course, 
      options_for_select(Round::COURSES), {}, 
      { class: 'form-control' } 
    %>
  </div>
  <div class='form-group'>
    <%= f.label :note %><br />
    <%= f.text_field(:note, { class: 'form-control' }) %>
  </div>
  
  <% if @round.in_past? %>
    <%= render 'rounds/past_table', f: f %>
  <% else %>
    <%= render 'rounds/future_table', f: f %>
  <% end %>

  <div class='actions'>
    <%= f.submit nil, {'class' => 'btn btn-success'} %>
  </div>
<% end %>
