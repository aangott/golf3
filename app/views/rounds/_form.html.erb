<%= form_for @round_form, url: rounds_path do |f| %>
  <div class='form-group'>
    <%= f.label :date %><br />
    <%= 
      f.date_select :date, 
      {:order => [:month, :day, :year]}, 
      { class: 'form-control' } 
    %>
  </div>
  <div class='form-group'>
    <%= f.label :course %><br />
    <%= 
      f.select :course, 
      options_for_select(Round::COURSES), {}, 
      { class: 'form-control' } 
    %>
  </div>
  <div class='form-group'>
    <%= f.label :note %><br />
    <%= f.text_field(:note, { class: 'form-control' }) %>
  </div>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Player 1</th>
        <th>Player 2</th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :matches do |m| %>
        <tr>
          <td>        
            <%= m.collection_select(:player1_id, Player.all, :id, :num_full_name,
              { include_blank: true }, class: 'form-control')
            %>
          </td>
          <td>
            <%= m.collection_select(:player2_id, Player.all, :id, :num_full_name,
              { include_blank: true }, class: 'form-control')
            %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='actions'>
    <%= f.submit 'Create Round', {'class' => 'btn btn-success'} %>
  </div>
<% end %>
