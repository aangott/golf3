<div id='rounds-index'>
  <h1 class='page-header'>
    Season Schedule
    <%= link_to new_round_path, class: 'pull-right btn btn-success' do %>
      <i class="fa fa-plus-circle"></i>
      Add new round
    <% end %>
  </h1>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Course</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @rounds.each do |round| %>
        <tr>
          <td><%= round.date %></td>
          <td><%= round.course %></td>
          <td>
            <%= link_to edit_round_path(round) do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </td>
          <td>
            <%= link_to '#', data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
