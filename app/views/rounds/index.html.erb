<div id='rounds-index'>
  <h1 class='page-header'>
    Season Schedule
    <% if logged_in? %>
      <%= link_to new_round_path, class: 'pull-right btn btn-success' do %>
        <i class="fa fa-plus-circle"></i>
        Add new round
      <% end %>
    <% end %>
  </h1>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Course</th>
        <th>Note</th>
        <% if logged_in? %>
          <th>Edit</th>
          <th>Delete</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @rounds.each do |round| %>
        <tr>
          <td><%= link_to round.date.strftime('%B %d, %Y'), round, class: 'round-link' %></td>
          <td><%= round.course %></td>
          <td><%= round.note %></td>
          <% if logged_in? %>
            <td>
              <%= link_to edit_round_path(round) do %>
                <i class="fa fa-pencil"></i>
              <% end %>
            </td>
            <td>
              <%= link_to '#', data: { confirm: 'Are you sure you want to permanently delete this round?' } do %>
                <i class="fa fa-times"></i>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
