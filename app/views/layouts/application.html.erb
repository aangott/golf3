<!DOCTYPE html>
<html>
<head>
  <title>Golf3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='application'>
    <div class='navmenu'>
      <a href='#'><h1>Mates <small>golf league</small></h1></a>
      <div class='nav-links'>
        <%= link_to 'Schedule', rounds_path %>
        <%= link_to 'Rankings', stats_rankings_path %>
        <%= link_to 'Score History', stats_score_history_path %>
      </div>
      <div class='admin-login'>
        <a href='#'>Admin Login</a>
      </div>
    </div>
    <div class='container main'>
      <div class='content'>
        <%= flash_messages %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
