<!DOCTYPE html>
<html>
<head>
  <title>Golf3</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='application'>
    <div class='navmenu'>
      <%= link_to root_path do %>
        <h1>Mates <small>golf league</small></h1>
      <% end %>
      <div class='nav-links'>
        <%= link_to 'Schedule', rounds_path %>
        <%= link_to 'Rankings', stats_rankings_path %>
        <%= link_to 'Score History', stats_score_history_path %>
      </div>
      <div class='admin-login'>
        <% if logged_in? %>
          <%= link_to 'Log out', logout_path %>
        <% else %>
          <%= link_to 'Admin Login', login_path %>
        <% end %>
      </div>
    </div>
    <div class='container main'>
      <div class='content'>
        <%= flash_messages %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
