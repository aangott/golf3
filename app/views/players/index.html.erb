<div id='players-index'>
  <h1 class='page-header'>
    Manage Players
    <%= link_to new_player_path, class: 'pull-right btn btn-success' do %>
      <i class="fa fa-plus-circle"></i>
      Add player
    <% end %>
  </h1>
  <% @categorized_players.each do |category, players| %>
    <h2><%= category %></h2>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Number</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% players.each do |player| %>
          <tr>
            <td><%= player.full_name %></td>
            <td><%= player.number %></td>
            <td>
              <%= link_to edit_player_path(player) do %>
                <i class="fa fa-pencil"></i>
              <% end %>
            </td>
            <td>
              <%= link_to player, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-times"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
